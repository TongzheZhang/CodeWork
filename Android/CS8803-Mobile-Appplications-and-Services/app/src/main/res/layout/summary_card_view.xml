<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="5dp"
    app:elevation="1dp" >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/status"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingLeft="8dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="5dp">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/gift_picture"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:textColor="@color/content_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gift_title"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/gift_picture"
                android:layout_alignParentTop="true"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/gift_title"
                android:layout_toRightOf="@+id/gift_picture"
                android:layout_toEndOf="@+id/gift_picture"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ProgressBar
                    android:id="@+id/progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/progress_bar"
                    android:max="100"
                    android:minWidth="120dp"
                    android:progress="50" />

                <TextView
                    android:id="@+id/current_total"
                    android:textColor="@color/content_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/current_price_days_to_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/progress_bar"
                android:layout_toRightOf="@+id/gift_picture"
                android:layout_toEndOf="@+id/gift_picture"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:textColor="@color/content_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_price"
                    android:layout_toRightOf="@+id/gift_picture"
                    android:layout_below="@+id/progress_bar" />

                <TextView
                    android:id="@+id/due_date"
                    android:textColor="@color/content_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reason_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/current_price_days_to_go"
                android:layout_toRightOf="@+id/gift_picture"
                android:layout_toEndOf="@+id/gift_picture"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/reason"
                    android:textColor="@color/content_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/days_to_go"
                    android:textColor="@color/content_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>